<local:WizardPageBase x:Class="AdvocacyPlatformInstaller.InstallerCompleteInstallationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvocacyPlatformInstaller"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="Blue">
            <Image Source="pack://application:,,,/Media/justice-scales.jpg" Stretch="Fill" StretchDirection="UpOnly" />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <TextBlock x:Name="FinalMessageTextBlock" Grid.Row="0" Grid.Column="0" Margin="30 0 30 0" Padding="15 15 5 5" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" />
        </Grid>
    </Grid>
</local:WizardPageBase>
